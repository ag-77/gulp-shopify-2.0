{% if page.content != blank %}
  <div class="rte">
    {{ page.content }}
  </div>
{% else %}
  <div class="rte">
    The page content is currently pending. Please check again shortly.
    {{ section.settings.title }}
  </div>
{% endif %}

{% schema %}
{
  "name": "Slideshow",
  "tag": "section",
  "class": "slideshow",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    }
  ]
}
{% endschema %}
